{
  "codemetrics.nodeconfiguration.IfWithElseStatement": 1,
  "cSpell.customDictionaries": {
    "project-words": {
      "name": "project-words",
      "path": "${workspaceRoot}/project-words.txt",
      "description": "Words used in this project",
      "addWords": true
    },
    "custom": true, // Enable the `custom` dictionary
    "internal-terms": false // Disable the `internal-terms` dictionary
  },
  "cSpell.logLevel": "Warning",
  "cSpell.showAutocompleteSuggestions": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.formatOnPaste": true,
  "editor.linkedEditing": true,
  "editor.rulers": [
    { "column": 80, "color": "rgba(255, 121, 198, 1)" } // Dracula pink
  ],
  "editor.suggest.localityBonus": true,
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.git": false
  },
  "git.enableSmartCommit": false,
  "gremlins.showInProblemPane": true,
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "markdown.experimental.updateLinksOnFileMove.enabled": "always",
  "markdown.experimental.validate.fileLinks.markdownFragmentLinks": "error",
  "markdown.experimental.validate.enabled": true,
  "markdown.experimental.validate.fileLinks.enabled": "error",
  "markdown.experimental.validate.fragmentLinks.enabled": "error",
  "markdown.experimental.validate.referenceLinks.enabled": "error",
  "markdown.extension.italic.indicator": "_",
  "markdown.extension.print.theme": "dark",
  "reactSnippets.settings.prettierEnabled": true,
  "tailwindCSS.validate": true,
  "terraform.codelens.referenceCount": true,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.referencesCodeLens.enabled": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.updateImportsOnFileMove.enabled": "always"
}
